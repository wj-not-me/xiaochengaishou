/* pages/onlineReservation/onlineReservation.wxss */

.status-box {
  width: 100vw;
  height: 80rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 999;
}

.status-item {
  height: 76rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(73,80,96,1);
  line-height: 76rpx;
}

.status-item:nth-child(1) {
  margin-left: 100rpx;
}

.status-item:nth-child(3) {
  margin-right: 100rpx;
}

.on {
  border-bottom: 4rpx solid rgba(255,123,35,1);
  color: rgba(255,123,35,1);
}

.order-list {
  margin-left: 30rpx;
  margin-top: 100rpx;
  z-index: 99;
}

.panel-order {
  width: 690rpx;
  border-radius: 8rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.section-wrapper {
  display: flex;
}

.order-title {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(233,234,236,1);
}

.order-type {
  max-width: 475rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(28,36,56,1);
  line-height: 30rpx;
  margin-left: 30rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}

.order-status {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(128,132,143,1);
  line-height: 26rpx;
  margin-top: 25rpx;
  margin-right: 30rpx;
}

.order-looking {
  width: 12rpx;
  height: 20rpx;
  margin-left: 24rpx;
  margin-top: 30rpx;
}

.order-time {
  height: 75rpx;
  overflow: hidden;
}

.order-time view {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(128,132,143,1);
  line-height: 26rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.order-opertate {
  min-height: 25rpx;
  display: flex;
}

.operate-btn {
  width: 136rpx;
  height: 50rpx;
  background: rgba(73,80,96,0);
  border: 1rpx solid rgba(221, 222, 225, 1);
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(73,80,96,1);
  line-height: 50rpx;
  text-align: center;
  margin-right: 30rpx;
  margin-bottom: 25rpx;
  }

.operate-btn:first-child {
  margin-left: auto;
}

.panel-noMore {
  width: 690rpx;
  height: 60rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #999999;
  line-height: 60rpx;
  text-align: center;
}

.panel-bottom {
  width: 690rpx;
  height: 118rpx; 
}

.addOnlineReservation {
  width: 100vw;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.btn-addOnlineReservation {
  height: 98rpx;
  background-color: rgba(255,123,35,1) !important;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(255,255,255,1);
  line-height: 98rpx;
  border-radius: 0;
}

.empty-image {
  width: 374rpx;
  height: 288rpx;
  margin-top: 326rpx;
  margin-left: 166rpx;
}
