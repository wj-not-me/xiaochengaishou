.panel-category {
  width: 750rpx;
  height: 80rpx;
  background: #fff;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(28,36,56,1);
  line-height: 80rpx;
}

.panel-category:nth-child(1) {
  margin-top: 20rpx;
}

.panel-category text{
  margin-left: 30rpx;
}

.panel-subCategory {
  width: 750rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-top: 1rpx solid rgba(233,234,236,1);
  border-bottom: 1rpx solid rgba(233,234,236,1);
}

.subCategory-bottom {
  border-bottom: 1rpx solid rgba(233,234,236,1);
}

.subCategory-item:nth-child(4n+1) {
  width: 187rpx;
  height: 187rpx;
  border-right: 1rpx solid rgba(233,234,236,1);
}

.subCategory-item:nth-child(4n+2) {
  width: 186rpx;
  height: 187rpx;
  border-right: 1rpx solid rgba(233,234,236,1);
}

.subCategory-item:nth-child(4n+3) {
  width: 186rpx;
  height: 187rpx;
  border-right: 1rpx solid rgba(233,234,236,1);
}

.subCategory-item:nth-child(4n+0) {
  width: 187rpx;
  height: 187rpx;
  border-right: rpx solid rgba(255,255,255,1);
}

.subCategory-item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
} 

.panel-mask {
  width: 187rpx;
  height: 187rpx;
  position: absolute;
  
}

.panel-mask view {
  width: 187rpx;
  height: 187rpx;
  background:rgba(240,240,240,1);
  opacity: 0.5;
}

.panel-mask image {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  margin-top: -163rpx;
  margin-left: 151rpx; 
}

.subCategory-item .subCategory-pic {
  width: 120rpx;
  height: 90rpx;
  margin-top: 30rpx;
}

.subCategory-item .subCategory-name {
  width: 130rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(128,132,143,1);
  line-height: 26rpx;
  text-align: center;
  margin-top: 8rpx;
}

.panel-bottom {
  width: 75rpx;
  height: 110rpx;
}

.panel-operation {
  width: 750rpx;
  height: 90rpx;
  position: fixed;
  bottom: 0;
}

.btn-opertion {
  height: 98rpx;
  background-color: rgba(255,123,35,1) !important;
  font-size:30rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height: 98rpx;
  border-radius: 0;
}


