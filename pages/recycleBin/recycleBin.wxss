/* pages/recycleBin/recycleBin.wxss */
.status-box {
  width: 100vw;
  height: 80rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 9999;
}

.status-item {
  height: 76rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(73,80,96,1);
  line-height: 76rpx;
}

.status-item:nth-child(1) {
  margin-left: 100rpx;
}

.status-item:nth-child(2) {
  margin-right: 100rpx;
}

.on {
  border-bottom: 4rpx solid rgba(255,123,35,1);
  color: rgba(255,123,35,1);
}

.bin-search {
  width: 100vw;
  height: 100rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background: #f0f0f0;
  position: fixed;
  top: 80rpx;
  z-index: 9999;
}

.search-box {
  width: 690rpx;
  height: 60rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-radius: 8rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.inputContent {
  width: 590rpx;
  height: 26rpx;
  margin-left: 16rpx;
  font-size: 26rpx;
  /* font-weight: 500; */
}

.inputContent-placeholder {
  font-size:26rpx;
  font-weight:500;
  color:rgba(187,190,196,1);
}

.icon-search {
  width: 24rpx;
  height: 26rpx;
}

.bin-list {
  /* height: 1500rpx; */
  /* background: green; */
  padding-bottom: 90rpx;
}

.panel-bin {
  width: 690rpx;
  padding-bottom: 20rpx;
  /* height: 270rpx; */
  background:rgba(255,255,255,1);
  border-radius: 8rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.panel-bin:first-child {
  margin-top: 180rpx;
}

.panel-bin-name {
  width: 495rpx;
  padding: 25rpx 30rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(28,36,56,1);
  word-break: break-all;
}

.panel-bin-street, .panel-bin-address, .panel-bin-contact {
  width: 690rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(128,132,143,1);
  word-break: break-all;
}

.button-choose {
  width: 105rpx;
  height: 45rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  border: 1px solid rgba(221, 222, 225, 1);
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(73,80,96,1);
  line-height: 43rpx;
  text-align: center;
  position: absolute;
  margin-left: 525rpx
}

.image-choosen {
  width: 36rpx;
  height: 26rpx;
  position: absolute;
  margin-left: 594rpx;
}

.panel-noMore {
  width: 690rpx;
  height: 60rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #999999;
  line-height: 60rpx;
  text-align: center;
  z-index: 999;
}


.empty-image {
  width: 374rpx;
  height: 288rpx;
  margin-top: 426rpx;
  margin-left: 188rpx;
  z-index: 999;
}
