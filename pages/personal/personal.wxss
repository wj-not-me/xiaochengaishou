/* pages/personal/personal.wxss */

.personal {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background: #F0F0F0;
  width: 100vw;
  height: 100vh;
}

.login {
 height: 396rpx;
}

.bg-image {
  width: 750rpx;
  height: 302rpx;
}

.user-info {
  width:690rpx;
  height:280rpx;
  background:rgba(254,254,254,1);
  box-shadow:0px 2px 24px 0px rgba(0, 0, 0, 0.12);
  border-radius:8rpx;
  position: absolute;
  top: 92rpx;
  left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.user-info-nickname {
  height: 32rpx;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(255,123,35,1);
  line-height: 32rpx;
}

.user-info-phoneNo {
  height:28rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(73,80,96,1);
  line-height:28rpx;
  margin-top: 23rpx;
}

.user-info-avatar {
  width: 132rpx;
  height: 132rpx;
  border-radius: 66rpx;
  position: absolute;
  top: -66rpx;
  left: 279rpx;
}

.address-manage {
  width:750rpx;
  height:100rpx;
  background:rgba(254,254,254,1);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.address-manage text {
  height:30rpx;
  font-size:30rpx;
  font-weight:400;
  color:rgba(73,80,96,1);
  line-height:30rpx;
  margin-left: 30rpx;
}

.address-manage image {
  width: 12rpx;
  height: 20rpx;
  margin-right: 30rpx;
}

.version-number {
  width:750rpx;
  height:100rpx;
  background:rgba(254,254,254,1);
  border-top: 1rpx solid rgba(233,234,236,1);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.version-number text {
  height:30rpx;
  font-size:30rpx;
  font-weight:400;
  color:rgba(73,80,96,1);
  line-height:30rpx;
  margin-left: 30rpx;
}

.version-number text:nth-child(2) {
  margin-left: 0rpx;
  margin-right: 30rpx;
}
