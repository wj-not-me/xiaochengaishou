/* pages/guidingPrice/guidingPrice.wxss */

.panel-notice {
  width: 750rpx;
  padding: 10rpx 200rpx 10rpx 30rpx;
  background: rgba(73,80,96,1);
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(255,255,255,1);
  line-height: 20rpx;
  position: fixed;
  top: 0rpx;
}

.close-notice {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  top: 12rpx;
  left: 704rpx;
}

.panel-updateTime {
  padding: 10rpx 0;
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(187,190,196,1);
  line-height: 20rpx;
  text-align: center;
}

.panel-updateTime:nth-child(2) {
  margin-top: 40rpx;
}

.panel-section {
  width: 100vw;
  background: #fff;
  /* margin-top: 20rpx; */
}

.section-wrapper:not(:nth-child(1)){
  margin-top: 50rpx;
}

.panel-title {
  width: 100vw;
  box-sizing: border-box;
  /* padding: 0 60rpx 0 30rpx; */
  background: #fff;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(28,36,56,1);
  /* line-height: 26rpx;  */
}

.title-name-tel {
  box-sizing: border-box;
  padding: 26rpx 60rpx 26rpx 30rpx;
  word-break: break-all;
}

.title-name-tel text:first-child {
  font-size: 32rpx;
  font-weight: 500;
}

.title-street-address {
  box-sizing: border-box;
  padding: 0rpx 60rpx 26rpx 30rpx;
  word-break: break-all;
}

.tilte-th {
  display: flex;
  border-top: 1rpx solid rgba(240,240,240,1);
  /* border-bottom: 1rpx solid rgba(240,240,240,1); */
}

.tilte-th view {
  width: 50%;
  box-sizing: border-box;
  padding: 26rpx 60rpx 26rpx 30rpx;
  /* text-align: center; */
}

.title-th-price {
  text-align: right !important;
}

.panel-section:first-child {
  margin-top: 0 !important;
}

.panel-category {
  padding: 26rpx 0 26rpx 30rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(28,36,56,1);
  line-height: 30rpx;
  border-bottom: 1rpx solid rgba(240,240,240,1);
}

.panel-subCategory-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(240,240,240,1);  
}

/* .panel-subCategory-price:not(:last-child) {
  border-bottom: 1rpx solid rgba(240,240,240,1);  
} */

.panel-subCategory {
  max-width: 400rpx;
  padding: 26rpx 0 26rpx 30rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(73,80,96,1);
  line-height: 26rpx; 
}

.panel-price {
  max-width: 200rpx;
  padding:  26rpx 60rpx 26rpx 0;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(128,132,143,1);
  line-height: 26rpx; 
  display: flex;
  align-items: center;
  word-break: break-all
}

.panel-price view {
  line-height: 26rpx; 
}

.panel-price>view:first-child {
  max-width: 84rpx;
  color: rgba(255,123,35,1);
  margin-right: 26rpx;
}

.panel-price>view:first-child { 
  max-width: 100rpx;
}

.panel-bottom {
  width: 100vw;
  height: 100rpx;
}