/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/**广告轮播图*/

.banner {
  margin: 20rpx;
  margin-top: 20rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  border-radius: 12rpx;
  overflow: hidden;
  will-change: transform;
}

swiper-item image {
  height: 100%;
  width: 100%;
  border-radius: 12rpx;
  display: inline-block;
  overflow: hidden;
}

.banner text {
  position: absolute;
  top: 35%;
  left: 35%;
  color: white;
  font-size: 38rpx;
  transform: translateX(-50%);
}

.navs {
  display: flex;
}

.nav-item {
  width: 25%; /**百分比：对应的4列*/
  display: flex;
  align-items: center;
  flex-direction: column; /**按列显示*/
  padding: 20rpx;
}

.nav-item .nav-image {
  width: 120rpx;
  height: 120rpx;
}

.nav-item text {
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #495060;
}

.view-line {
  width: 1rpx;
  height: 80rpx;
  background: #d7d4d4;
  margin-left: 25rpx;
}

.home-bottom {
  margin-bottom: 30rpx;
}

.home {
  position: relative;
  display: flex;
  align-items: center;
  height: 160rpx;
  padding-left: 30rpx;
  margin-top: 25rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  border-radius: 5px;
  background-color: white;
}

.home .img {
  width: 76rpx;
  height: 68rpx;
}

.home-info {
  padding-left: 30rpx;
  flex: 1;
}

.home .name {
  font-size: 34rpx;
  color: #495060;
}

.home .sales {
  font-size: 28rpx;
  color: #80848f;
  margin-top: 5rpx;
}

.home-numb {
  height: 50rpx;
  display: flex;
  justify-content: flex-end;
  margin-top: 30rpx;
  margin-right: 30rpx;
  line-height: 50rpx;
  font-size: 40rpx;
}

.right-img {
  width: 18rpx;
  height: 28rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.3;
  z-index: 999;
}

.clause {
  width: 640rpx;
  height: 1000rpx;
  box-sizing: border-box;
  padding: 40rpx 30rpx ;
  border-radius: 20rpx;
  background:#fff;
  position: absolute;
  top: calc((100vh - 1000rpx)/2);
  left: 55rpx;
  z-index: 9999;  
}

.clause-scroll {
  width: 100%;
  height: 100%;
}

.clause-title {
  width: 300rpx;
  /* height: 100rpx; */
  height: 32rpx;
  line-height: 32rpx;
  font-weight:bold;
  text-align: center;
  margin-left: 140rpx;
  /* background: green; */
}

.clause-content {
  width: 100%;
  /* height: 1700rpx; */
  box-sizing: border-box;
  padding: 0 10rpx;
  margin-top: 40rpx;
  /* background: blue; */
}

.clause-button {
  width: 564rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background: rgba(255,123,35,1);
  margin-top: 40rpx;
  margin-left: 9rpx;
  /* margin-bottom: 20rpx; */
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255,255,255,1);
  line-height: 90rpx;

}